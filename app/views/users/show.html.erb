<div class="text-center">
  <h1><%= @user.name %></h1>
  <div class="row">
    <%= image_tag user_avatar(@user) %>
  </div>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to t('buttons.profile_edit'),
                                      edit_user_path(@user), class: 'btn btn-outline-dark' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('titles.create')%></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('titles.created')%></p>
      <% end %>
    </div>
  </div>
</div>
