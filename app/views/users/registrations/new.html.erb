<div class="container">
    <div class="row">
      <h3><%= t('titles.registration')%></h3>
      <div class="col-md-5">
        <%= simple_form_for @user, url: registration_path(resource_name) do |f| %>

          <%= f.error_notification %>

          <div class="mb-3">
            <%= f.input :name %>
          </div>

          <div class="mb-3">
            <%= f.input :email, required: true  %>
          </div>

          <div class="mb-3">
            <%= f.input :password, required: true %>
          </div>

          <div class="mb-3">
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-group">
            <h4><%= t('titles.avatar')%></h4>
            <div class="row">
              <div class="col-sm-4">
                <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
              </div>
              <div class="row-sm-4">
                <p><%= f.file_field :avatar, as: :file %></p>
              </div>
            </div>
          </div>

          <%= f.button :submit, t('buttons.sign_up'), class: "btn-primary" %>

        <% end %>
      <p></p>
      <div class="mb-3">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
