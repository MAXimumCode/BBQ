<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3>Регистрация</h3>
      <%= simple_form_for @user, url: registration_path(resource_name) do |f| %>

        <%= f.error_notification %>

        <%= f.input :name %>

        <%= f.input :email  %>

        <%= f.input :password %>

        <%= f.input :password_confirmation %>

        <%= f.button :submit, t('buttons.sign_up'), class: "btn-primary" %>

      <% end %>
      <p></p>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
