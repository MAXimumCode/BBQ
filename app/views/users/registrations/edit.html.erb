<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3>Смена пароля</h3>
      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>

        <%= f.error_notification %>

        <%= f.input :email  %>

        <%= f.input :password %>

        <%= f.input :password_confirmation %>

        <%= f.input :current_password %>

        <%= f.button :submit, t('buttons.update'), class: "btn-primary" %>

        <h3>Удалить аккаунт?</h3>

        <div>
          <%= link_to t('buttons.delete'), registration_path(resource_name),
                      method: :delete, data: { confirm: t('confirmation.are_you_sure') }, class: 'btn btn-danger' %>
          <%= link_to t('buttons.back'), :back %>
        </div>

      <% end %>
    </div>
  </div>
</div>
