<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3>Смена пароля</h3>
      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>

        <%= f.error_notification %>

        <div class="mb-3">
          <%= f.input :email  %>
        </div>

        <div class="mb-3">
          <%= f.input :password %>
        </div>

        <div class="mb-3">
          <%= f.input :password_confirmation %>
        </div>

        <div class="mb-3">
          <%= f.input :current_password %>
        </div>
        <div class="mb-3">
          <%= f.button :submit, t('buttons.update'), class: "btn-primary" %>
        </div>

        <h3>Удалить аккаунт?</h3>

        <div class="mb-3">
          <%= link_to t('buttons.delete'), registration_path(resource_name),
                      method: :delete, data: { confirm: t('confirmation.are_you_sure') }, class: 'btn btn-danger' %>
          или <%= link_to t('buttons.back'), :back, class: 'btn btn-secondary btn-sm' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
