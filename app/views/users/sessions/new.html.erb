<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3>Войти</h3>
      <%= simple_form_for @user, url: session_path(resource_name) do |f| %>

        <%= f.error_notification %>

        <%= f.input :email %>

        <%= f.input :password %>

        <%= f.input :remember_me, :label_html => { :class => 'label_type' },
                    wrapper: :vertical_boolean, as: :boolean if devise_mapping.rememberable? %>

        <%= f.button :submit, "Войти", class: "btn-primary" %>

      <% end %>
      <p></p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
