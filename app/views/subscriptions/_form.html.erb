<%= simple_form_for [@event, subscription] do |f| %>

  <% unless user_signed_in? %>
    <div class="form-group mb-3">
      <%= f.input :user_name, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.input :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit t('buttons.subscribe'), class: 'btn btn-primary' %>
  </div>
<% end %>
