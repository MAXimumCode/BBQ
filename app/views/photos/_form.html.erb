<%= simple_form_for [@event, photo], html: {multipart: true} do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-4">
        <p><%= f.file_field :photo, as: :file %></p>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('buttons.upload'), class: 'btn-primary' %>
  </div>
<% end %>
